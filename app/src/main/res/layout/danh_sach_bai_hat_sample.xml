<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewdanhsachindex"
            android:text="1"
            android:textSize="20sp"
            android:layout_margin="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:textColor="@color/black"
            android:text="Ten ca khuc"
            android:textSize="20sp"
            android:id="@+id/txtviewtenbaihat"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtviewtencasi"
            android:layout_below="@id/txtviewtenbaihat"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ca si"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgviewluotthich"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>