<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_alignBottom="@+id/imageviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/banner_image"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Lo yeu mat roi"
            android:id="@+id/textviewtitlebannerbaihat"
            android:layout_toRightOf="@id/banner_image"
            android:layout_alignTop="@id/banner_image"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_toRightOf="@id/banner_image"
            android:layout_below="@+id/textviewtitlebannerbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/noidungbanner"
                android:text="Ca khuc do nghe si trinh bay"
                android:textColor="@color/white"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        

    </RelativeLayout>


</RelativeLayout>